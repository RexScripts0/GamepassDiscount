})

MainTab:AddTextbox({
    Name = "Enter Dupe Number",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        print("Dupe Number: "..Value)
    end
})

MainTab:AddButton({
    Name = "Start Dupe",
    Callback = function()
        executeScript()  -- Executa o script remoto ao clicar
    end
})

