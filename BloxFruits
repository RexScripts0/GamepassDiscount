-- Garantir que a OrionLib está carregada
local OrionLib = loadstring(game:HttpGet('https://raw.githubusercontent.com/shlexware/Orion/main/source'))()

-- Criar a janela do menu com o nome personalizado
local Window = OrionLib:MakeWindow({Name = "RexHub", HidePremium = true, IntroText = "Welcome"})

-- Função para executar o script remoto
local function executeScript()
    loadstring(game:HttpGet('https://raw.githubusercontent.com/wogjiew55/GamepassDiscount/refs/heads/main/BloxFruits', true))()
end

-- Main Features Tab
local MainTab = Window:MakeTab({
    Name = "Main Features",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

MainTab:AddTextbox({
    Name = "Enter Dupe Number",
    Default = "",
    TextDisappear = true,
    Callback = function(Value)
        print("Dupe Number: "..Value)
    end
})

MainTab:AddButton({
    Name = "Duplicar Frutas",
    Callback = function()
        executeScript()  -- Executa o script remoto ao clicar
    end
})

